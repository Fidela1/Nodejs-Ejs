<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <form action="/update/<%= user._id %>" method="post" enctype="multipart/form-data">
                <h2>Edit User(<%= user.name %>)</h2>
                <div class="addUser">
                    <label for="name">Name</label>
                    <input type="name" name="name" placeholder="Enter name" value="<%= user.name %>" required>
                </div>
                <div class="addUser">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Enter email" value="<%= user.email %>" required>
                </div>
                <div class="addUser">
                    <label for="phone">PhoneNumber</label>
                    <input type="tel" name="phone" placeholder="Enter Phone number" value="<%= user.phone %>" required>
                </div>
                <div class="addUser">
                    <label for="image">select image</label>
                    <input type="file" name="image">
                    <img src="<%= user.image %>" width="100" alt="">
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %>">
                <div class="addUser">
                    <button>Update User</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('layout/footer') %>